<div class="center-text card-container">
  {{#each list}}
    {{#if (isEqual @index ../limit)}}

    {{else}}
      {{> card __=../__ item=this}}
    {{/if}}
  {{else}}
    {{i18n __ 'pages.list.empty'}}
  {{/each}}
</div>
<div class="ls-flex-row ls-left-pad center">
  {{#unless (isEqual page 0)}}
  <a class="btn white black-text" href="/bots?page={{previous}}&limit={{limit}}">
    {{ i18n __ 'pagination.page.prev' }}
  </a>
  {{/unless}}
  <span class="btn asbestos-nodark ls-nocursor">
    {{ next }}
  </span>
  {{#if (isEqual list.length (add limit 1))}}
  <a class="btn white black-text" href="/bots?page={{next}}&limit={{limit}}">
    {{ i18n __ 'pagination.page.next' }}
  </a>
  {{/if}}
</div>
