<label for="{{ name }}">{{ i18n __ label }}{{#if required}}{{> modesta-required }}{{/if}}</label>
<div class="ls-flex-column">
  {{#if (isArray value)}}
    {{#each value}}
      {{#if @first}}
        {{> modesta-input value=this name=../name modal=../modal __=../__ placeholder=../placeholder add=../add}}
      {{else}}
        <div class="ls-flex-row">
          <input name="{{../name}}" type="text" class="full-width" value={{this}}>
          <button type="button" class="ls-button" onclick="deleteRow(this)">
            {{ i18n ../__ "forms.delete"}}
          </button>
        </div>
      {{/if}}
    {{else}}
      {{> modesta-input name=name modal=modal __=__ placeholder=placeholder}}
    {{/each}}
  {{else}}
    {{> modesta-input value=default name=name modal=modal __=__ placeholder=placeholder}}
  {{/if}}
</div>
