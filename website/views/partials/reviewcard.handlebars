<div class="ls-reviewer-box">
  <div class="ls-flex-row">
    <img class="ls-reviewer-avatar" src="{{or review.author.cachedAvatar defaultImage}}">
    <h5 class="ls-reviewer-title">{{review.author.username}}</h5>
    {{#if (or (isEqual review.author.id user.id) user.admin)}}
      <form method="POST" action="/bots/{{item.id}}/reviews/{{review.id}}/delete">
        <button class="ls-not-a-button">{{ i18n __ 'pages.reviews.delete' }}</button>
      </form>
    {{/if}}
  </div>
  <div class="ls-flex-row wrap ls-left-pad">
    <p>{{date review.date getLocale}}</p>
    <p class="ls-star">
      {{#do review.rating}}
        â˜…
      {{/do}}
    </p>
  </div>
  <p>{{review.text}}</p>
</div>
