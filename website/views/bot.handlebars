<div class="ls-main-content main-content-container container">
  <div class="center-text card-container">
    <section class="ls-bot-profile card profile">
      <div class="avatar">
        <img class="avatar " alt="{{item.contents.name}}" src="{{item.images.avatar}}">
      </div>
      <div class="card-content">
        <h1 class="name">{{item.contents.name}}</h1>
        <span class="description">{{item.contents.description}}</span>
        <p>
          {{#if item.trigger.prefix.length}}
            {{i18n __n "pages.bots.prefix" item.trigger.prefix.length}}
          {{/if}}
          {{#each item.trigger.prefix}}
            <code class="ls-bot-prefix label asbestos">{{this}}</code>
          {{/each}}
          {{#if item.trigger.mentionable}}
            <code class="ls-bot-prefix label midnight-blue">{{i18n __ "pages.bots.mentionable"}}</code>
          {{/if}}
          {{#if item.trigger.customisable}}
            <code class="ls-bot-prefix label midnight-blue">{{i18n __ "pages.bots.customisable"}}</code>
          {{/if}}
        </p>
      </div>
    </section>
  </div>
  <div class="center">
    {{#if item.invite}}
    <a class="btn white black-text" href="{{item.invite}}">
      {{i18n __ "pages.bots.invite"}}
    </a>
    {{/if}}
    {{#if item.support}}
    <a class="btn white black-text" href="https://discord.io/circuit">
      {{i18n __ "pages.bots.support"}}
    </a>
    {{/if}}
    {{#if item.github.owner}}
    {{#if item.github.repo}}
    <a class="btn white black-text" href="https://github.com/{{item.github.owner}}/{{item.github.repo}}">
      {{i18n __ "pages.bots.github"}}
    </a>
    {{/if}}
    {{/if}}
    {{#if canEdit}}
      <a class="btn midnight-blue" href="/bots/{{item.id}}/edit">
        {{i18n __ "pages.bots.edit"}}
      </a>
      <a class="btn midnight-blue" href="/bots/{{item.id}}/delete">
        {{i18n __ "pages.bots.delete"}}
      </a>
    {{/if}}
  </div>
  <div id="ls-custom-content" class="ls-custom-content">
    {{{contents}}}
  </div>
  <div id="ls-more" class="ls-custom-content">
    <p>More</p>
    <img src="/ModestaCSS/css/images/arrow.png">
  </div>
  <div id="ls-less" class="ls-custom-content ls-custom-content-less hidden">
    <p>Less</p>
    <img src="/ModestaCSS/css/images/arrow.png">
  </div>
  <hr>
  <div>
    <h2>Reviews</h2>
  </div>
</div>

<script src="/js/botpage.js"></script>
