html(lang=lang)
	head
		block title
			title #{__('website')}#{title ? ` - ${title}` : ''}
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible" content="IE=edge")
		meta(name="viewport" content="width=device-width, initial-scale=1")
		meta(name="theme-color" content="#FFFFFF")
		meta(property="og:type" content="website")
		link(rel="publisher" href=location)
		block embed
			meta(name="author" content=location)
			meta(property="og:description" content=__('website_description'))
			meta(name="og:image" content="/img/terminal512.png")
			meta(property="og:title" content=__('website'))
		link(href="/img/favicon.gif" rel="shortcut-icon")
		link(href="/img/favicon.gif" rel="icon")
		link(async href="https://fonts.googleapis.com/icon?family=Noto+Sans|Material+Icons" rel="stylesheet")
		link(href="/css/default/index.css" rel="stylesheet")
		link(href="/manifest.json" rel="manifest")
		script(src="/js/images.js")
	body
		xml.hide#info
			block xml
			if user
				field#userID #{user.id}
		header
			.item
				a(data-ajax-url href="/")
					img(src="/img/terminal512.png" alt=__('alt_logo'))
			.item.pad-left
				span #{__('website')}
		.horizontal.body
			aside
				.navigation
					a.horizontal.enlarge(data-ajax-url href="/")
						.icon.red
							img(src="/img/icon/white_home.svg" alt=__('nav_homepage'))
						.item.red-lighten
							span #{__('nav_homepage')}
					if user
						a.horizontal.enlarge(data-ajax-url href=`/list/${user.id}`)
							.icon.blue
								img(src=`https://cdn.discordapp.com/avatars/${user.id}/${user.avatar}.png?size=64` onerror="imageFail()" alt=user.username)
							.item.blue-lighten
								span #{user.username}
					a.horizontal.enlarge(data-ajax-url href="/list/all")
						.icon.green
							img(src="/img/icon/white_all.svg" alt=__('nav_all'))
						.item.green-lighten
							span #{__('nav_all')}
					.hover
						a.horizontal(data-ajax-url href="/lang")
							.icon
								img(src="/img/icon/black_language.svg" alt=__('nav_lang'))
							.item
								span #{__('nav_lang')}
					if user
						.hover
							a.horizontal(data-ajax-url href="/auth/logout")
								.icon
									img(src="/img/icon/black_exit.svg" alt=__('nav_logout'))
								.item
									span #{__('nav_logout')}
					else
						.hover
							a.horizontal(data-ajax-url href="/auth")
								.icon
									img(src="/img/icon/black_login.svg" alt=__('nav_login'))
								.item
									span #{__('nav_login')}
				.extra-navigation
					ul
						li: a(data-ajax-url href="/docs") #{__('nav_documentation')}
						li: a(data-ajax-url href="/theme") #{__('nav_theme')}
					block nav
					
			main
				block main
		footer
			.item
				p #{__('footer_copyright')}
				p #{__('footer_licence')}
		block script
		//	script(src="/js/ajax.js")
		script(async src="https://www.googletagmanager.com/gtag/js?id=UA-67900801-5")
		script.
			window.dataLayer = window.dataLayer || [];
			function gtag(){dataLayer.push(arguments);}
			gtag('js', new Date());
			gtag('config', 'UA-67900801-5');
