extends layout.pug

block jumbotron
	.jumbotron
		.container
			p.lead.code Edit bot

block content
	.row
		#error.col-12
	.row
		.col-12
			form(method="post")
				.form-group
					label(for="name") Name
					input#name.form-control(value=bot.name type="text" name="name" maxlength="32" placeholder="Insert name for your bot")
				.form-group
					label(for="avatar") Avatar URL
					input#avatar.form-control(value=bot.avatar type="text" name="avatar" maxlength="2000" placeholder="Try not to use a link to Discord if you always change your picture.")
				.form-group
					label(for="invite") Invite URL
					input#invite.form-control(value=bot.invite type="text" name="invite" maxlength="2000" placeholder="An invite link for your bot. Can be any link, as long as it automatically redirects to Discord.")
					p: a(href="https://discordapi.com/permissions.html" target="_blank") Invite Generator
				.form-group
					label(for="id") ID
					input#id.form-control(disabled value=bot.id type="text" maxlength="70" placeholder="Insert the ID for your bot")
				.form-group
					label(for="shortDesc") Short Description
					input#shortDesc.form-control(value=bot.shortDesc type="text" name="shortDesc" maxlength="200" placeholder="Insert a short and consice description")
				.form-group
					small.form-text.text-muted Please insert how to trigger the bot in the long description. Your bot cannot be tested for quality and assurance without this.
					label(for="type") Long Description Type
					select#type.form-control(name="type" placeholder="Select type here" onchange!="description();")
						option(disabled) Please select a value
						option(value="iframe" selected=bot.type==="iframe") &lt;iframe&gt;
						option(value="markdown" selected=bot.type==="markdown") Markdown (no HTML)
				#description.form-group
					label(for="longDesc") Long Description
					if bot.type === "iframe"
						input#longDesc.form-control(value=bot.longDesc type="text" name="longDesc" maxlength="2000" placeholder="Insert iframe URL")
					else if bot.type === "markdown"
						textarea#longDesc.form-control(name="longDesc" maxlength="20000" rows="6" placeholder="Insert Markdown") #{bot.longDesc}
				button.btn.btn-primary(type="submit" onclick="return check();") Submit
				input.hide(type="text" name="csrf" value=csrf)
				input.hide(type="text" name="id" value=bot.id)

block script
	script(src="/js/add.js")
