html
	head
		block title
			title #{title ? `${title} -` : ''} #{__('website')}
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible" content="IE=edge")
		meta(name="viewport" content="width=device-width, user-scalable=no, initial-scale=1")
		meta(name="theme-color" content="#FFFFFF")
		meta(property="og:type" content="website")
		link(rel="publisher" href=location)
		block embed
			meta(name="author" content=location)
			meta(property="og:description" content=__('website_description'))
			meta(name="og:image" content="/img/terminal.png")
			meta(property="og:title" content=__('website'))
		link(href="/img/favicon.gif" rel="shortcut-icon")
		link(href="/img/favicon.gif" rel="icon")
		link(rel="stylesheet" href="/css/table/index.css")
	body
		table
			tr
				td.header(colspan="2")
					a(href="/") #{__('nav_header')}
			tr
				td.nav
					li: a(href="/docs") #{__('nav_documentation')}
					li: a(href="/") #{__('nav_list')}
					li: a(href="/list/all") #{__('nav_all')}
					li: a(href="/list/queue") #{__('nav_queue')}
					if user
						li: a(href=`/list/${user.id}`) #{user.username}
						li: a(href="/bot/add") #{__('nav_add')}
						li: a(href="/auth/logout") #{__('nav_logout')}
					else
						li: a(href="/auth") #{__('nav_login')}
					li: a(href="/lang") #{__('nav_lang')}
					li: a(href=list_invite) #{__('list_invite')}
					li: a(href="/theme") #{__('nav_theme')}
				td.content
					block content
			tr
				td.footer(colspan="2")
					p #{__('footer_copyright')}
		block script
		script(async src="https://www.googletagmanager.com/gtag/js?id=UA-67900801-5")
		script.
			window.dataLayer = window.dataLayer || [];
			function gtag(){dataLayer.push(arguments);}
			gtag('js', new Date());

			gtag('config', 'UA-67900801-5');
