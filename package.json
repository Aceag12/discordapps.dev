	"dependencies": {
		"express": "^4.16.2",
		"js-yaml": "^3.10.0",
		"rethinkdbdash": "^2.3.31"
	},
	"devDependencies": {
		"@types/express": "^4.11.0",
		"eslint": "^4.10.0",
		"eslint-config-airbnb-base": "^11.3.2",
		"eslint-plugin-import": "^2.7.0"
	},
	"eslintConfig": {
		"extends": "airbnb-base",
		"plugins": [
			"import"
